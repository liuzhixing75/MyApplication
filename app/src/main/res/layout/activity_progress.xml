<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NumberProgressActivity"
    >

    <com.example.administrator.myapplication.view.NumberProgressBar
        android:id="@+id/numberbar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:progress_current="0"
        app:progress_max="100"
        app:progress_reached_color="@color/colorPrimaryDark"
        app:progress_text_size="15sp"
        app:progress_text_color="@color/colorPrimaryDark"
        app:progress_reached_bar_height="5dp"
        app:progress_unreached_bar_height="2.5dp"
        />

</LinearLayout>